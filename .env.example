# KoNote Web — Environment Variables
# Copy to .env and fill in your values.

# Django secret key — generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me

# PII encryption key — generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=

# Database URLs
DATABASE_URL=postgresql://konote:konote@localhost:5432/konote
AUDIT_DATABASE_URL=postgresql://audit_writer:audit_pass@localhost:5433/konote_audit

# Auth mode: "azure" or "local"
AUTH_MODE=local

# Azure AD (only needed if AUTH_MODE=azure)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_REDIRECT_URI=https://your-domain.com/auth/callback/

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Domain for Caddy TLS (production only)
DOMAIN=localhost
